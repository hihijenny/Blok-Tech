<!DOCTYPE html>
<%- include("head.ejs") %>
    <body>
        <%- include("header.ejs") %>
            <main>
                <section>
                    <h1>What do you like the most?</h1>
                    <form action=/sendChoice method="POST" class = "choice">
                        <fieldset>
                            <label>
                                <input class="choice1" type="radio" name="food1" value="<%= formData.imageSet1[0].name %>" required>
                                <img src=<%= formData.imageSet1[0].imageUrl %>>
                            </label>
                            <label>
                                <input type="radio" name="food1" value="<%= formData.imageSet1[1].name %>">
                                <img src=<%= formData.imageSet1[1].imageUrl %>>
                            </label>
                        </fieldset>
                        <fieldset>
                            <label>
                                <input class="choice1" type="radio" name="food2" value="<%= formData.imageSet2[0].name %>" required>
                                <img src=<%= formData.imageSet2[0].imageUrl %>>
                            </label>
                            <label>
                                <input type="radio" name="food2" value="<%= formData.imageSet2[1].name %>">
                                <img src=<%= formData.imageSet2[1].imageUrl %>>
                            </label>
                        </fieldset>
                        <fieldset>
                            <label>
                                <input class="choice1" type="radio" name="food3" value="<%= formData.imageSet3[0].name %>" required>
                                <img src=<%= formData.imageSet3[0].imageUrl %>>
                            </label>
                            <label>
                                <input type="radio" name="food3" value="<%= formData.imageSet3[1].name %>">
                                <img src=<%= formData.imageSet3[1].imageUrl %>>
                            </label>
                        </fieldset>
                        <button type="submit">
                            Choose this
                        </button>
                    </form>
                </section>
            </main>
        <%- include("footer.ejs") %>
    </body>
    <script src="script.js"></script>
</html>